# Home Assistant Secrets File
# Copy this to secrets.yaml and fill in your values

# Email (SMTP) Configuration
smtp_username: "your-email@gmail.com"
smtp_password: "your-gmail-app-password"
smtp_sender: "your-email@gmail.com"
email_recipient_1: "recipient1@example.com"
email_recipient_2: "recipient2@example.com"
email_recipient_3: "recipient3@example.com"

# InfluxDB
influxdb_token: "your-influxdb-admin-token"

# Camera Snapshot Commands (contain RTSP credentials)
snapshot_living_room_cmd: "timeout 15 ffmpeg -y -rtsp_transport tcp -i rtsp://CAMERA_USER:CAMERA_PASS@CAMERA_IP:554/h264Preview_01_sub -frames:v 1 -update 1 /config/www/snapshots/living_room_latest.jpg"
snapshot_conservatory_cmd: "timeout 15 ffmpeg -y -rtsp_transport tcp -i rtsp://CAMERA_USER:CAMERA_PASS@CAMERA_IP:554/h264Preview_01_sub -frames:v 1 -update 1 /config/www/snapshots/conservatory_latest.jpg"

# Deepgram API (for STT balance monitoring)
deepgram_balance_cmd: "curl -s 'https://api.deepgram.com/v1/projects/YOUR_PROJECT_ID/balances' -H 'Authorization: Token YOUR_API_KEY' | python3 -c 'import json,sys; d=json.load(sys.stdin); print(round(d[\"balances\"][0][\"amount\"],2))' 2>/dev/null || echo 0"

# Grafana Dashboard Embed URLs
grafana_activity_pattern_url: "http://YOUR_TAILSCALE_IP:3000/d-solo/dad-presence/dad-activity-patterns?orgId=1&panelId=1&kiosk&theme=dark"
grafana_activity_by_room_url: "http://YOUR_TAILSCALE_IP:3000/d-solo/dad-presence/dad-activity-patterns?orgId=1&panelId=2&kiosk&theme=dark"
grafana_wake_sleep_url: "http://YOUR_TAILSCALE_IP:3000/d-solo/dad-presence/dad-activity-patterns?orgId=1&panelId=3&kiosk&theme=dark"
